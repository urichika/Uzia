            <h2>サラダ</h2>
            <% let bef_name1 = 'null' %>
            <% foods.forEach((food) => { %>
                <ul class="tab-reader">
                  <% if(food.genre == 'サラダ'){ %>
                    <% if(bef_name1 != food.name) { %>
                        <li class="flex">
                            <span class="mgl-30"><%= food.name %></span>
                            <span class="tab-reader-box"><hr class="tab-r-line"></span>
                            <span><%= food.info %></span>
                            <% if(food.info != null){ %>
                                <span class="mgr-10"></span>
                            <% } %>
                            <span><%= food.price %></span>
                        </li>
                    <% } else { %>
                        <li class="right">
                            <span><%= food.info %></span>
                            <% if(food.info != null){ %>
                                <span class="mgr-10"></span>
                            <% } %>
                            <span><%= food.price %></span>
