          <div class="search_place">
            <h1>カクテル名から検索</h1>
            <div class="search_form">
                <form action="/Drink/NameSearch" method="get">
                  <input type="search" name="Name" autocomplete="off" id="name_keyword">
                  <input type="submit" value="検索">
                </form>
            </div>
            <ul>
                <% kakuterus.forEach((kakuteru) => { %>
                  <li class="result_square ">
                      <div class="Name_result">
                          <span class="kakuteru_name"><%= kakuteru.name %></span>
                          <ul>
                              <li class="style">
                                  <% if(kakuteru.base1 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base1 %></span>
                              </li>
                              <li class="style">
                                  <% if(kakuteru.base2 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base2 %></span>
                              </li>
                              <li class="style">
                                  <% if(kakuteru.base3 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base3 %></span>
                              </li>
                              <li class="style">
                                  <% if(kakuteru.base4 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base4 %></span>
                              </li>
                              <li class="style">
                                  <% if(kakuteru.base5 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base5 %></span>
                              </li>
                              <li class="style">
                                  <% if(kakuteru.base6 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base6 %></span>
                              </li>
                              <li class="style">
                                  <% if(kakuteru.base7 != null){ %>
                                      <span>・</span> 
                                  <% } %>
                                  <span><%= kakuteru.base7 %></span>
                              </li>
                          </ul>
                      </div>
                  </li>
                <% }) %>
              </ul>
          </div>
        </div>

        <footer>
            <div class = "footer_left">
              <p>Pub entrance uzia</p>
