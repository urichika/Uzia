                    <option value="バーボンウィスキー">バーボンウィスキー</option>
                    <option value="ブランデー">ブランデー</option>
                  </select>
                  <input type="submit" value="検索">
                </form>
            </div>

            <ul>
              <% kakuterus.forEach((kakuteru) => { %>
